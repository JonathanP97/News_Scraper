<style>
  body {
  	margin: 0px;
  	background-color: #d4d8dd;
  }
  .header {
  	margin: 0px;
  	background-color: #5874a3;
  	padding: 0px 0px 5px 5px; 
  }  
  .header > h3 {
  	font-size: 20px;
  	margin: 0px;
  	padding-bottom: 4px;
  }
  p {
  	margin: 4px;
  	font-size: 15px;
  }
  .post_div {
  	margin: 10px 2px 2px 10px;
  }
  .post > h5 {
  	font-size: 18px;
  	margin: 2px 2px 5px 2px;
  }
  .post > p {
  	font-size: 12px;
    display: inline;
  }
  .post > button {
    position: absolute;
    right: 0;
  }
  .post {
    position: relative;
  	width: 70%;
  	border: 3px solid black;
  	background-color: khaki;
  	margin: 15px 0px 15px 0px;
  	padding: 2px 6px 4px 2px;
  	margin-left: auto;
  	margin-right: auto;
  }
  .comments {
    display: none;
  }
</style>

<div class="header">
	<h3>Enter a subreddit to scrape</h3>
	<form id="scrape-form">
		<label for="sub-input">"worldnews", "news"</label>
		<input type="text" id="sub-input">
		<input id="scrape-subreddit" type="submit" value="scrape subreddit">
		<br><br>		
	</form>
</div>
<div class="btn_box">

</div>

<a href="/posts" target="_blank">Other posts!</a>
<a href="/users" target="_blank">Other users</a>
<br>
<div class="post_div">
{{#each this }}
  <div class="post">
  	<h5>{{this.title}}</h5>
  	<a href={{this.link}} target="_blank">link</a>
  	<p>posted by: {{this.author}}</p> 
    <p>{{this.date}}</p>
    <button id="comment-div" num={{this._id}}>Comments</button>
    <br>
    <div class="comments">
      <form id="comment-form">
        <input type="text" id="comment-input">
        <input id="post-comment" type="submit" value="comment">
      </form>
    </div>
  </div>
{{/each}}
</div>